<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
        android:id="@+id/crdView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:elevation="6dp"
        app:cardCornerRadius="6dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.8"
                android:layout_margin="6dp"
                app:layout_constraintBottom_toTopOf="@id/txtName"/>

            <TextView
                android:id="@+id/txtNationality"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/profileImg"
                app:layout_constraintTop_toTopOf="@id/profileImg"
                android:text="IN"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_nationality"
                />
            <TextView
                android:id="@+id/txtMatch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="@id/profileImg"
                app:layout_constraintTop_toTopOf="@id/profileImg"
                android:text="100%"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background_match"
                />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/profileImg"
                app:layout_constraintEnd_toEndOf="@id/profileImg"
                app:layout_constraintTop_toBottomOf="@id/profileImg"
                app:layout_constraintBottom_toTopOf="@id/txtEmail"
                android:textSize="24sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txtName"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintBottom_toTopOf="@id/barrier"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txtMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/txtName"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintBottom_toTopOf="@id/barrier"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:barrierDirection="top"
                app:constraint_referenced_ids="btnAccept, btnDeny"/>
            <ImageButton
                android:id="@+id/btnAccept"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="20dp"
                android:src="@drawable/accept_icon"
                />

            <ImageButton
                android:id="@+id/btnDeny"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"
                android:src="@drawable/deny_icon"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>